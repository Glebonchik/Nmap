<Window x:Class="nmapGUI.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="О программе"
        Height="250" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">

    <Grid Margin="15">
        <StackPanel>
            <TextBlock Text="Mini NMAP Scanner" FontSize="18" FontWeight="Bold" Margin="0 0 0 10" HorizontalAlignment="Center"/>
            <TextBlock Text="Автор: Трушин Г.А." FontSize="14" Margin="0 0 0 5"/>
            <TextBlock Text="Кафедра: МАИ 316" FontSize="14" Margin="0 0 0 15"/>
            <TextBlock TextWrapping="Wrap" FontSize="12">
                Эта программа позволяет сканировать диапазоны IP и порты в локальной сети.
                Результаты сохраняются в JSON и отображаются в отдельном окне.
            </TextBlock>
            <Button Content="Закрыть" Width="100" Height="30" HorizontalAlignment="Center" Margin="0 20 0 0" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
