<Window x:Class="nmapGUI.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сканирование..." Height="150" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Сканирование, пожалуйста подождите..."
                       Margin="0 0 0 10"
                       FontSize="16"
                       TextAlignment="Center"/>

            <ProgressBar x:Name="ScanProgressBar"
                         Height="25"
                         IsIndeterminate="False"
                         Minimum="0"
                         Maximum="100"/>
        </StackPanel>
    </Grid>
</Window>
