<Window x:Class="MiniNmapGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mini Nmap GUI" Height="600" Width="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
            <Label Content="CIDR:" VerticalAlignment="Center"/>
            <TextBox x:Name="CidrBox" Width="150" Margin="6,0"/>
            <Label Content="Range:" VerticalAlignment="Center"/>
            <TextBox x:Name="RangeBox" Width="160" Margin="6,0"/>
            <Label Content="Ports:" VerticalAlignment="Center"/>
            <TextBox x:Name="PortsBox" Width="120" Margin="6,0" Text="1-1024"/>
            <Label Content="Concurrency:" VerticalAlignment="Center"/>
            <TextBox x:Name="ConcBox" Width="60" Margin="6,0" Text="200"/>
            <Label Content="Timeout(ms):" VerticalAlignment="Center"/>
            <TextBox x:Name="ToBox" Width="80" Margin="6,0" Text="1500"/>
            <Button x:Name="StartBtn" Content="Start Scan" Click="StartBtn_Click" Margin="12,0"/>
            <Button x:Name="GetReportBtn" Content="Get Report" Click="GetReportBtn_Click" Margin="6,0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,8">
            <ProgressBar x:Name="ProgressBar" Width="400" Height="18" Minimum="0" Maximum="100"/>
            <Label x:Name="StatusLabel" Margin="10,0" Content="Idle" VerticalAlignment="Center"/>
        </StackPanel>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <DataGrid x:Name="ResultsGrid" Grid.Column="0" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Host" Binding="{Binding IP}"/>
                    <DataGridTextColumn Header="Open ports" Binding="{Binding OpenCount}"/>
                </DataGrid.Columns>
            </DataGrid>

            <WebBrowser x:Name="Browser" Grid.Column="1"/>
        </Grid>
    </Grid>
</Window>
