<Window x:Class="nmapGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mini NMAP Scanner" Height="300" Width="420"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- IP -->
        <TextBlock Text="IP адрес или диапазон:" FontWeight="Bold"/>
        <TextBox x:Name="IpInput" Grid.Row="1" Margin="0 5 0 10" Height="30"/>

        <!-- Порты -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0 0 0 10">

            <StackPanel Width="180">
                <TextBlock Text="Порт начала:" FontWeight="Bold"/>
                <TextBox x:Name="StartPortInput" Height="30"/>
            </StackPanel>

            <StackPanel Width="180" Margin="20 0 0 0">
                <TextBlock Text="Порт конца:" FontWeight="Bold"/>
                <TextBox x:Name="EndPortInput" Height="30"/>
            </StackPanel>

        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="ScanButton" Content="Начать сканирование" Width="180" Height="35"
                    Click="ScanButton_Click" Margin="0 0 20 0"/>
            <Button x:Name="AboutButton" Content="О программе" Width="140" Height="35"
                    Click="AboutButton_Click"/>
        </StackPanel>

    </Grid>
</Window>
